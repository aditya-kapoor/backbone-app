<form id="addPost">
  <h3>New Post</h3>
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title">
  </div>
  <div>
    <label for="body">Body</label>
    <textarea id="body" name="body"></textarea>
  </div>
  <div>
    <input type="submit" value="Add Post" id="submitPost">
    <a href="#" class="cancel">Cancel</a>
  </div>
</form>