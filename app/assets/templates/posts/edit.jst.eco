<form id="editPost">
  <h3>Edit Post</h3>
  <div>
    <label for="edit_title">Title</label>
    <input type="text" id="edit_title" name="title" value="<%= @model.get('title') %>">
  </div>
  <div>
    <label for="edit_body">Body</label>
    <textarea id="edit_body" name="body"><%= @model.get('body') %></textarea>
  </div>
  <div>
    <input type="submit" value="Update Post" id="updatePost">
    <a href="#" class="cancel">Cancel</a>
  </div>
</form>